<h1><%= @category.name %> Listings</h1>

<h3><a href="/categories/<%= @category.id %>/posts/new">+ Create New Listing</a></h3>

<br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Posted</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <a href="/categories/<%= @category.id %>/posts/<%= post.id %>"><%= post.title %></a>
        </td>
        <td>$<%= post.price %></td>
        <td><%= post.updated_at %></td>
        <td>
          <a class="modify" href="#" title="#">Edit</a>
        </td>
        <td>
          <form action="#" method="POST">
            <input type="submit" value="Delete">
          <form>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>



